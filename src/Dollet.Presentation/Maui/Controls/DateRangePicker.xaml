<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dollet.Controls.DateRangePicker">

    <StackLayout Orientation="Horizontal">
        <DatePicker FontSize="20" Date="{Binding DateFrom, Mode=TwoWay}" MaximumDate="{Binding MaxDateFrom}"/>
        <Label FontSize="20" Text="-" VerticalOptions="Center"/>
        <DatePicker FontSize="20" Date="{Binding DateTo, Mode=TwoWay}" MaximumDate="{Binding MaxDateTo}" />
    </StackLayout>
</ContentView>